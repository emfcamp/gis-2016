@normal-font: 'Arial Regular';

#lighting_festoon {
    text-size: 10;
    text-placement: line;
    text-dy: 10;
    text-face-name: @normal-font;
    text-vertical-alignment: middle;
    text-horizontal-alignment: middle;
    text-halo-fill: rgba(255,255,255,0.6);
    line-color: yellow;
    line-width: 3;
    text-fill: yellow;
    text-name: "'Festoon (' + [line_length] + 'm)'";
}
